---
layout: layouts/base-post.njk
pagination:
  data: post.posts
  size: 1
  alias: item
permalink: /{{ item.path }}/index.html
---
<div class="content"><h1>{{ item.title }}</h1><div class="date-title">{{ item.pubDate | date }}</div>{{ item['content:encoded'] | safe }}</div></div><div class="grid">{% for item in homepost.posts %}<div class="col box"><a class="grid-item" style="background:#101010;border: 1px solid #000000;color:#cbcbcb;" href="/{{ item.path }}">{{ item['content:encoded'] | safe }}<div class="grid-item-content"><div class="date-title-home"> {{ item.pubDate | date }}</div><h2>{{ item.title }}</h2></div></a></div>{% endfor %}</div>
